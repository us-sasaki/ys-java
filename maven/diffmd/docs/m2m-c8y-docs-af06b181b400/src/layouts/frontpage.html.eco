<!DOCTYPE html>
<html lang="en-US">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Cumulocity GmbH">
    <meta name="description" content="<%= @document.description %>">
    <meta name='robots' content='all'/>
    <%- @getBlock("meta").toHTML() %>

    <title><%= if @document.title then "#{@site.title} | #{@document.title}" else @site.title %></title>

     <script type='text/javascript' src='//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js'></script>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

  <link rel="shortcut icon" href="/guides/favicon.ico"/>

  <script>
        var isInIFrame = window.location !== window.parent.location;
        if(isInIFrame){

          document.write('<link href="/guides/css/docs-iframe-styles.css" rel="stylesheet" id="cumulocity-style-css" type="text/css" media="all" />');
        }else{
          document.write('<link href="/guides/less/docs-styles.css" rel="stylesheet" id="cumulocity-style-css" type="text/css" media="all" />');
        }
  </script>

    <%- @getBlock("styles").toHTML() %>
</head>
<body>
  <%- @partial("header") %>
  <div class="container">
      <h1 class="main-title"><%= @document.title %></h1>
      <%- @content %>
  </div>


<script type="text/javascript">
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-29175101-1']);
  _gaq.push(['_setDomainName', 'cumulocity.com']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
  <%- @partial("scripts") %>
<%- @getBlock("scripts").toHTML() %>

</body>
</html>
